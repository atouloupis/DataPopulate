//Topbar
nav.navbar.navbar-expand.navbar-light.bg-white.topbar.mb-4.static-top.shadow

  //Sidebar Toggle (Topbar)
  button#sidebarToggleTop.btn.btn-link.d-md-none.rounded-circle.mr-3
    i.fa.fa-bars

  //Topbar Search
  form.d-none.d-sm-inline-block.form-inline.mr-auto.ml-md-0.my-2.my-md-0.mw-100.navbar-search
    div.input-group
        each cryptodata in Cryptodata
          if cryptodata.symbol=='btc'
            span.mr-2.d-none.d-lg-inline.small.text-primary.ml-4.my-auto
              a.ml-2
                img(src=cryptodata.image.small,width="25 px")
              a.ml-2
                =cryptodata.market_data.current_price.eur
                |  €
            if cryptodata.market_data.price_change_percentage_24h>0
              span.mr-2.d-none.d-lg-inline.small.font-weight-bold.text-success.ml-1.my-auto
                  |+
                  =Math.round(cryptodata.market_data.price_change_percentage_24h*10)/10
                  | %
            else
              span.mr-2.d-none.d-lg-inline.small.font-weight-bold.text-danger.ml-1.my-auto
                  =Math.round(cryptodata.market_data.price_change_percentage_24h*10)/10
                  | %


  //Topbar Navbar
  ul.navbar-nav.ml-auto

    //Nav Item - Search Dropdown (Visible Only XS)
    li.nav-item.dropdown.no-arrow.d-sm-none
      a.nav-link.dropdown-toggle(href="#",id="searchDropdown",role="button",data-toggle="dropdown",aria-haspopup="true",aria-expanded="false")
        i.fas.fa-search.fa-fw
      //Dropdown - Messages
      div.dropdown-menu.dropdown-menu-right.p-3.shadow.animated--grow-in(aria-labelledby="searchDropdown")
        form.form-inline.mr-auto.w-100.navbar-search
          div.input-group
            input.form-control.bg-light.border-0.small(type="text", placeholder="Search for...", aria-label="Search", aria-describedby="basic-addon2")
            div.input-group-append
            button.btn.btn-primary(type="button")
              i.fas.fa-search.fa-sm

    //Nav Item - Alerts
    li.nav-item.dropdown.no-arrow.mx-1
      a.nav-link.dropdown-toggle(href="#",id="alertsDropdown",role="button",data-toggle="dropdown",aria-haspopup="true",aria-expanded="false")
        i.fas.fa-bell.fa-fw
        //Counter - Alerts
        span.badge.badge-danger.badge-counter
          |3+
      //Dropdown - Alerts
      div.dropdown-list.dropdown-menu.dropdown-menu-right.shadow.animated--grow-in(aria-labelledby="alertsDropdown")
        h6.dropdown-header
          |Alerts Center
        a.dropdown-item.d-flex.align-items-center(href="#")
          div.mr-3
            div.icon-circle.bg-primary
              i.fas.fa-file-alt.text-white
          div
            div.small.text-gray-500
              |December 12, 2019
            span.font-weight-bold
            |A new monthly report is ready to download!
        a.dropdown-item.d-flex.align-items-center(href="#")
          div.mr-3
            div.icon-circle.bg-success
              i.fas.fa-donate.text-white
          div
            div.small.text-gray-500
              |December 7, 2019
            |$290.29 has been deposited into your account!
        a.dropdown-item.d-flex.align-items-center(href="#")
          div.mr-3
            div.icon-circle.bg-warning
              i.fas.fa-exclamation-triangle.text-white
          div
            div.small.text-gray-500
              |December 2, 2019
            |Spending Alert: We've noticed unusually high spending for your account.
        a.dropdown-item.text-center.small.text-gray-500(href="#")
          |Show All Alerts

      //Nav Item - Messages
      li.nav-item.dropdown.no-arrow.mx-1
        a.nav-link.dropdown-toggle(href="#",id="messagesDropdown",role="button",data-toggle="dropdown",aria-haspopup="true",aria-expanded="false")
          i.fas.fa-envelope.fa-fw
          //Counter - Messages
          span.badge.badge-danger.badge-counter
            |7
        //Dropdown - Messages
        div.dropdown-list.dropdown-menu.dropdown-menu-right.shadow.animated--grow-in(aria-labelledby="messagesDropdown")
          h6.dropdown-header
            |Message Center
          a.dropdown-item.d-flex.align-items-center(href="#")
            div.dropdown-list-image.mr-3
              img.rounded-circle(src="https://source.unsplash.com/fn_BT9fwg_E/60x60",alt="")
              div.status-indicator.bg-success
            div.font-weight-bold
              div.text-truncate
                |Hi there! I am wondering if you can help me with a problem I've been having.
              div.small.text-gray-500
                |Emily Fowler · 58m
          a.dropdown-item.d-flex.align-items-center(href="#")
            div.dropdown-list-image.mr-3
              img.rounded-circle(src="https://source.unsplash.com/AU4VPcFN4LE/60x60" alt="")
              div.status-indicator
            div
              div.text-truncate
                |I have the photos that you ordered last month, how would you like them sent to you?
              div.small text-gray-500
                |Jae Chun · 1d
          a.dropdown-item.d-flex.align-items-center(href="#")
            div.dropdown-list-image.mr-3
              img.rounded-circle(src="https://source.unsplash.com/CS2uCrpNzJY/60x60",alt="")
              div.status-indicator.bg-warning
            div
              div.text-truncate
                |Last month's report looks great, I am very happy with the progress so far, keep up the good work!
              div.small.text-gray-500
                |Morgan Alvarez · 2d
          a.dropdown-item.d-flex.align-items-center(href="#")
            div.dropdown-list-image.mr-3
              img.rounded-circle(src="https://source.unsplash.com/Mv9hjnEUHR4/60x60" alt="")
              div.status-indicator.bg-success
            div
              div.text-truncate
                |Am I a good boy? The reason I ask is because someone told me that people say this to all dogs, even if they aren't good...
              div.small.text-gray-500
                |Chicken the Dog · 2w

          a.dropdown-item.text-center.small.text-gray-500(href="#")
            |Read More Messages

      div.topbar-divider.d-none.d-sm-block

      //Nav Item - User Information
      li.nav-item.dropdown.no-arrow
        a.nav-link.dropdown-toggle(href="#",id="userDropdown",role="button",data-toggle="dropdown",aria-haspopup="true",aria-expanded="false")
          span.mr-2.d-none.d-lg-inline.text-gray-600.small
            =User
          img.img-profile.rounded-circle(src="https://source.unsplash.com/QAB-WJcbgJk/60x60")
        //Dropdown - User Information
        div.dropdown-menu.dropdown-menu-right.shadow.animated--grow-in(aria-labelledby="userDropdown")
          a.dropdown-item(href="#")
            i.fas.fa-user.fa-sm.fa-fw.mr-2.text-gray-400
            |Profile
          a.dropdown-item(href="#")
            i.fas.fa-cogs.fa-sm.fa-fw.mr-2.text-gray-400
            |Settings
          a.dropdown-item(href="#")
            i.fas.fa-list.fa-sm.fa-fw.mr-2.text-gray-400
            |Activity Log
          div.dropdown-divider
          a.dropdown-item(href="#",data-toggle="modal",data-target="#logoutModal")
            i.fas.fa-sign-out-alt.fa-sm.fa-fw.mr-2.text-gray-400
            |Logout

//End of Topbar