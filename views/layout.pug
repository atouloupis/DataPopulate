  body#page-top

    //Page Wrapper
    div#wrapper

      block sidebar
        include sidebar.pug

      //Content Wrapper
      div#content-wrapper.d-flex.flex-column

        //Main Content
        div#content
          block header
            include header.pug


          block content
            div.container.listing-reg
              h1 My Amazing App

        //Footer
        block footer
          include footer.pug
        //End of footer


    //Scroll to Top Button
    a.scroll-to-top.rounded(href="#page-top")
      i.fas.fa-angle-up

    //Logout modal
    include logout_modal.pug

    //Bootstrap core JavaScript
    script(src="vendor/jquery/jquery.min.js")
    script(src="vendor/bootstrap/js/bootstrap.bundle.min.js")

